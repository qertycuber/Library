<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Library.EditBookWindow"
        Title="Edit Book"
		Icon="/Assets/books.ico">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Margin="10">
			<TextBlock Text="Title:" Margin="0 0 0 10"/>
			<TextBox x:Name="TitleTextBox" Margin="0 0 0 10"/>

			<TextBlock Text="Author:" Margin="0 0 0 10"/>
			<TextBox x:Name="AuthorTextBox" Margin="0 0 0 10"/>

			<ComboBox x:Name="CategoryComboBox" Margin="0 0 0 10"/>

			<Button Content="Back" x:Name="BackButton" Click="BackButton_Click" HorizontalContentAlignment="Center" Padding="10" Width="250" Margin="0 10 0 0"/>
			<Button Content="Edit" x:Name="EditButton" IsEnabled="False" Click="EditButton_Click" HorizontalContentAlignment="Center" Padding="10" Width="250" Margin="0 10 0 0"/>
		</StackPanel>


	</Grid>
</Window>
